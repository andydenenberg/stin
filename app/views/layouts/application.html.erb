<!DOCTYPE html>
<html>
<head>
  <title>Supporting those in need</title>
  <%= stylesheet_link_tag 'web_app_theme' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <div id="header">
      <h1><a href="/home/index">Supporting those in need</a></h1>
      <div id="user-navigation">
        <ul class="wat-cf">

			<li>User: <%= current_user.email %>
        	<li><%= link_to "My Profile", profile_path %></li>
			<% if user_signed_in? %>
			  	<li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
			<% else %>
			  	<li><%= link_to('Login', new_user_session_path) %></li>
	        	<li><%= link_to 'Sign up' , new_user_registration_path %></li>
			<% end %>

        </ul>
      </div>
      <div id="main-navigation">
        <ul class="wat-cf">
          <li class="first"><%= link_to 'Organizations', orgs_path %></li>
          <li class="first"><%= link_to 'Users', profile_list_path %></li>
          <li class="first"><%= link_to 'Activities', activities_path %></li>
          <li class="first"><%= link_to 'Donations', donations_path %></li>
        </ul>
      </div>
    </div>    
    <div id="wrapper" class="wat-cf">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>
      <div id="main">
        <%= yield %>
        <div id="footer">
          <div class="block">
            <p>Copyright &copy; <%= Time.now.year %> Supporting those in need.</p>
          </div>      
        </div>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>    
  </div>
</body>
</html>
