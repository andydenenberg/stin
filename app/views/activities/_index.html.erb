<table class="table">
  <tr>             
    <th class="first">Organization</th>
    <th>Impact</th>
    <th>Reward</th>
    <th>Name</th>
    <th>Activity Date</th>
    <th>Duration</th>
    <th class="last">&nbsp;</th>
  </tr>



  <% @activities.each do |activity| -%>
  <tr class="<%= cycle("odd", "even") %>">
    <td>

	    <% 	@org = Org.find(:all, :conditions => { :id  => activity.org_id  }) %>
	    <% 	@org.each do |org| %>
	    <%= org.organization	%>  
	    <% 	end %>
	</td>
    <td><%= activity.impact %></td>
    <td><%= activity.reward %></td>

	
    <td><%= link_to activity.name, activity_path(activity) %></td>
    <td><%= activity.starttime %></td>
    <td><%= ( activity.endtime - activity.starttime )/3600 %></td>

    <td class="last">
      <%= link_to "Show", activity_path(activity) %> |
      <%= link_to "Edit", edit_activity_path(activity) %> |
      <%= link_to "Delete", activity_path(activity), :method => :delete, :confirm => "Are you sure?" %>
    </td>
  </tr>          
  <% end -%>
</table>
<div class="actions-bar wat-cf">
  <div class="actions">
  </div>
  
  <%= will_paginate @activities  %>
  
</div>