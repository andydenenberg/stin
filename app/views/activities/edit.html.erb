<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "List", activities_path  %></li>
      <li><%= link_to "New", new_activity_path %></li>
      <li class="active"><%= link_to "Edit", edit_activity_path %></li>
    </ul>
  </div>          
  <div class="content">            
    <h2 class="title">Edit Activity</h2>
    <div class="inner">
      <%= form_for @activity, :url => activity_path(@activity), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>