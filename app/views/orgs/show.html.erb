<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", orgs_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_org_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", org_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.org.organization", :default => t("activerecord.labels.organization", :default => "Organization")) %>:</b>
          <%= @org.organization %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.org.division", :default => t("activerecord.labels.division", :default => "Division")) %>:</b>
          <%= @org.division %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.org.address", :default => t("activerecord.labels.address", :default => "Address")) %>:</b>
          <%= @org.address %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.org.city", :default => t("activerecord.labels.city", :default => "City")) %>:</b>
          <%= @org.city %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.org.description", :default => t("activerecord.labels.description", :default => "Description")) %>:</b>
          <%= @org.description %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.org.background", :default => t("activerecord.labels.background", :default => "Background")) %>:</b>
          <%= @org.background %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_org_path(@org), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), org_path(@org), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>