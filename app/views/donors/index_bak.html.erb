<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "List", donors_path  %></li>
      <li><%= link_to "New", new_donor_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title">All Donors</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>First</th>
                    <th>Email</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @donors.each do |donor| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= donor.id %></td>
          <td><%= link_to donor.first, donor_path(donor) %></td>
          <td><%= user.email %></td>
          <td class="last">
            <%= link_to "Show", donor_path(donor) %> |
            <%= link_to "Edit", edit_donor_path(donor) %> |
            <%= link_to "Delete", donor_path(donor), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= will_paginate @donors  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>