<div class="columns wat-cf">
	<div class="column left">
		  <div class="group">
		    <%= f.label :first , :class => :label %>
		    <%= f.text_field :first , :class => 'text_field' %>
		    <span class="description">Firstname</span>
		  </div>
		  <div class="group">
		    <%= f.label :last, :class => :label %>
		    <%= f.text_field :last, :class => 'text_field' %>
		    <span class="description">Lastname</span>
		  </div>
		  <div class="group">
			<%= f.label :comments, :class => :label %>
			<%= f.text_area :comments, :class => 'text_area', :rows => 10 %>
		    <span class="description">How do you feel about helping make the world a better place...</span>
		  </div>
	</div>

	<div class="column right">
		  <div class="group">
			<%= f.label :address, :class => :label %>
			<%= f.text_field :address, :class => 'text_field' %>
		    <span class="description">Where you live </span>
		  <div>
		  <div class="group">
		    <%= f.label :city, :class => :label %>
		    <%= f.text_field :city, :class => 'text_field' %>
		  	<span class="description">Your hometown </span>
		  </div>
		  <div class="group">
		    <%= f.label "Photo", :class => :label %><br>
			<%= show_photo(@user) %><br><br>			
		    <%= f.file_field :avatar, :class => 'image' %><br>
		  	<span class="description">Please upload a new picture</span>
		  </div>
		  <div class="group">
		    <button class="button" type="submit">
		      <%= image_tag("web-app-theme/tick.png", :alt => "Save") %>Save
		    </button>
		    <span class="text_button_padding">or</span>
			<%= link_to "Cancel", profile_path, :class => "text_button_padding link_button" %>
		  </div>

	</div>
</div>