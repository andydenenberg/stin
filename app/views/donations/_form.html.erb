<div class="columns wat-cf">
		<div class="column left">

  <div class="group">
	<%= f.label :org_id, "Organization", :class => :label %>
	<span class="description">Pick the Organization</span><br>
	<%= f.collection_select( :org_id , Org.all, :id, :organization) %><br>
  </div>

	  <%= f.hidden_field :user_id %>
	
  <div class="group">
    <%= f.label :kind, "What kind of donation are you making?", :class => :label %>
    <%= f.select :kind, donation_kind %>
  </div>

  <div class="group">
    <%= f.label :value, "Value", :class => :label %>
    <%= f.text_field :value, :class => 'text_field' , :size => 10 %>
    <span class="description">If not financial, please approximate value of donation</span>
  </div>

</div>

<div class="column right">
	
  <div class="group">
    <%= f.label :description, "Description", :class => :label %>
    <%= f.text_area :description, :class => 'text_area', :rows => 5 %>
  </div>

  <div class="group">
    <%= f.label :made_by, "Made by", :class => :label %>
    <%= f.text_field :made_by, :class => 'text_field' %>
    <span class="description">If not made by yourself, please specify</span>
  </div>
        
	<div class="group navform wat-cf">
	  <button class="button" type="submit">
	    <%= image_tag("web-app-theme/tick.png", :alt => "Save") %>Save
	  </button>
	  <span class="text_button_padding">or</span>
		<%= link_to "Cancel", donations_path, :class => "text_button_padding link_button" %>
	</div>
	
</div>
</div>

